<%= form_for [refinery, :sliders_admin, @slider] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @slider,
              :include_object_name => true %>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:image],
                :object => "sliders/slider" -%>
  </div>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sliders.admin.sliders.slider'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @slider.headline) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
