<section id="page-title">
  <img src="/assets/stavka.png">
  <h1><%=copywriting("Запрос ставки онлайн", :scope => :price_request) %></h1>
</section>
<section id="body">
  <div class="container_12">
  <% if flash[:notice] %>
    <div class="form-confirmation"><%=copywriting("Спасибо, ваше сообщение отправлено!", :scope => :price_request) %></div>
  <% end %>
    <!-- <h2>Запрос ставки онлайн</h2> -->
    <%= form_tag price_request_path, :class => "form", :id => "stavka" do %>

      <div class="container_12">
      <div class="grid_4">
        <span class="form-title"><%=copywriting("Контактное лицо*", :scope => :price_request) %></span>
        <%= text_field_tag :contact_person, nil, :required => true %>

        <span class="form-title"><%=copywriting("Требуемый сервис*", :scope => :price_request) %></span>
        <ul>
          <li>
            <%= check_box_tag :by_sea %><%= label_tag 'by_sea' do %><span class="check-box__pic"></span><span class="check-box__text"><%=copywriting("Морская контейнерная перевозка", :scope => :price_request) %></span><% end %>
          </li>
          <li>
            <%= check_box_tag :custom %><%= label_tag 'custom' do %><span class="check-box__pic"></span><span class="check-box__text"><%=copywriting("Таможенное оформление", :scope => :price_request) %></span><% end %>
          </li>
          <li>
            <%= check_box_tag :by_car_or_train %><%= label_tag 'by_car_or_train' do %><span class="check-box__pic"></span><span class="check-box__text"><%=copywriting("Автомобильная или ж/д перевозка", :scope => :price_request) %></span><% end %>
          </li>
          <li>
            <%= check_box_tag :storage %><%= label_tag 'storage' do %><span class="check-box__pic"></span><span class="check-box__text"><%=copywriting("Терминальные и складские операции", :scope => :price_request) %></span><% end %>
          </li>
          <li>
            <%= check_box_tag :oversize %><%= label_tag 'oversize' do %><span class="check-box__pic"></span><span class="check-box__text"><%=copywriting("Перевозка негабаритных и проектных грузов", :scope => :price_request) %></span><% end %>
          </li>
        </ul>
      </div>

      <div class="grid_4">
        <span class="form-title"><%=copywriting("E-mail*", :scope => :price_request) %></span>
        <%= email_field_tag :email, nil, :required => true %>
      </div>
      <div class="grid_4">
        <span class="form-title"><%=copywriting("Телефон", :scope => :price_request) %></span>
        <%= telephone_field_tag :phone %>
      </div>

      <div class="grid_4">
        <span class="form-title"><%=copywriting("Пункт отправления", :scope => :price_request) %></span>
        <%= text_field_tag :departure %>
      </div>
      <div class="grid_4">
        <span class="form-title"><%=copywriting("Пункт назначения", :scope => :price_request) %></span>
        <%= text_field_tag :destination %>
      </div>

      <div class="grid_5 ">
        <span class="form-title"><%=copywriting("Тип контейнера", :scope => :price_request) %></span>

        <%= select_tag :type, options_for_select(["", copywriting("20-ти футовый стандартный (20'DV)", :scope => :price_request), copywriting("40-ка футовый стандартный (40'DV)", :scope => :price_request), copywriting("40-ка футовый высокий (40'HC)", :scope => :price_request), copywriting("45-ти футовый высокий (45'HC)", :scope => :price_request), copywriting("20-ти футовый рефрижераторный (20'RF)", :scope => :price_request), copywriting("40-ка футовый рефрижераторный (40'RH)", :scope => :price_request), copywriting("Иной (укажите в поле «Дополнительно»)", :scope => :price_request)]), :placeholder => copywriting("Выберите тип контейнера", :scope => :price_request)%>

      </div>

      <div class="grid_3">
        <span class="form-title"><%=copywriting("Груз", :scope => :price_request) %></span>
        <%= text_field_tag :cargo %>
      </div>
      </div>

      <div class="container_12">
        <div class="grid_5">
          <span class="form-title"><%=copywriting("Дополнительно", :scope => :price_request) %></span>
          <%= text_field_tag :extra %>
        </div>
        <div class="grid_4">
          <span class="form-title"><%=copywriting("Код ТНВЭД", :scope => :price_request) %></span>
          <%= text_field_tag :tnved %>
        </div>
        <div class="grid_3">
          <span class="form-title"><%=copywriting("Вес груза", :scope => :price_request) %></span>
          <%= text_field_tag :weight %>
        </div>
      </div>

      <div class="grid_8">
        <%= submit_tag copywriting("Запросить ставку", :scope => :price_request) %><span class="form-extra-text"><%=copywriting("* - поля обязательные для заполнения.", :scope => :price_request) %></span>
      </div>

    <% end %>
  </div>
</section>
